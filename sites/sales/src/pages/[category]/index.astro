---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ArticleCard from "@growthgear/shared/components/ArticleCard.astro";
import Breadcrumbs from "@growthgear/shared/components/Breadcrumbs.astro";
import { getCollection } from "astro:content";
import { readingTime, countWords } from "@growthgear/shared/utils";
import { categories } from "../../config";

export async function getStaticPaths() {
  return categories.map((category) => ({
    params: { category: category.slug },
    props: { category },
  }));
}

const { category } = Astro.props;

const articles = await getCollection("articles", ({ data }) => {
  return data.category === category.slug;
});

const sortedArticles = articles.sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

const breadcrumbs = [{ name: category.name, href: `/${category.slug}` }];
---

<BaseLayout
  seo={{
    title: `${category.name} Articles`,
    description: category.description,
  }}
>
  <div class="container-wide py-12">
    <Breadcrumbs items={breadcrumbs} />

    <header class="mb-12">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900">
        {category.name}
      </h1>
      <p class="mt-4 text-lg text-gray-600 max-w-2xl">
        {category.description}
      </p>
    </header>

    {sortedArticles.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedArticles.map((article) => (
          <ArticleCard
            title={article.data.title}
            description={article.data.description}
            href={`/${category.slug}/${article.slug}`}
            image={article.data.image}
            date={article.data.publishedAt}
            readingTime={readingTime(countWords(article.body))}
          />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-600">No articles in this category yet.</p>
      </div>
    )}
  </div>
</BaseLayout>
