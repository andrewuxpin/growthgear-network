---
import AdminLayout from "../layouts/AdminLayout.astro";
---

<AdminLayout title="Sites">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h2 class="text-lg font-semibold text-gray-900">Sites</h2>
      <p class="text-sm text-gray-500">Manage your content network</p>
    </div>
    <button
      id="add-site-btn"
      class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 flex items-center"
    >
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      Add Site
    </button>
  </div>

  <!-- Sites Grid -->
  <div id="sites-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="bg-white rounded-lg shadow p-6 text-center text-gray-500">
      Loading...
    </div>
  </div>

  <!-- Add Site Modal -->
  <div id="add-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-lg p-6 w-full max-w-md">
      <h2 class="text-xl font-bold mb-4">Add New Site</h2>
      <form id="add-form" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Site ID</label>
          <input
            type="text"
            id="site-id"
            required
            placeholder="e.g., ai, sales, marketing"
            class="w-full px-4 py-2 border rounded-lg"
          />
          <p class="mt-1 text-sm text-gray-500">Lowercase, no spaces</p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Site Name</label>
          <input
            type="text"
            id="site-name"
            required
            placeholder="e.g., AI Insights"
            class="w-full px-4 py-2 border rounded-lg"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Niche</label>
          <input
            type="text"
            id="site-niche"
            required
            placeholder="e.g., artificial-intelligence"
            class="w-full px-4 py-2 border rounded-lg"
          />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Domain (optional)</label>
          <input
            type="text"
            id="site-domain"
            placeholder="e.g., ai.growthgear.com.au"
            class="w-full px-4 py-2 border rounded-lg"
          />
        </div>
        <div class="flex justify-end space-x-3">
          <button type="button" id="close-modal" class="px-4 py-2 bg-gray-100 rounded-lg hover:bg-gray-200">
            Cancel
          </button>
          <button type="submit" class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">
            Create Site
          </button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<script is:inline>
(function() {
  const API_URL = 'https://growthgear-api.andrew-705.workers.dev';

  async function loadSites() {
    const apiKey = localStorage.getItem('admin_api_key');
    const grid = document.getElementById('sites-grid');

    if (!apiKey) {
      grid.innerHTML = '<div class="col-span-full bg-yellow-50 rounded-lg shadow p-6 text-center text-yellow-700">Please enter your API key to view sites.</div>';
      return;
    }

    try {
      const response = await fetch(`${API_URL}/api/sites`, {
        headers: { 'Authorization': `Bearer ${apiKey}` }
      });
      const data = await response.json();

      if (!data.success) {
        grid.innerHTML = `<div class="col-span-full bg-red-50 rounded-lg shadow p-6 text-center text-red-700">API Error: ${data.error || 'Unknown error'}. Check your API key.</div>`;
        return;
      }

      if (data.data.length > 0) {
        grid.innerHTML = data.data.map(site => `
          <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">${site.name}</h3>
                <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">Active</span>
              </div>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-500">ID:</span>
                  <span class="font-mono text-gray-900">${site.id}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-500">Niche:</span>
                  <span class="text-gray-900">${site.niche}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-500">Domain:</span>
                  <span class="text-gray-900">${site.domain || 'Not set'}</span>
                </div>
              </div>
            </div>
            <div class="px-6 py-3 bg-gray-50 border-t flex justify-between">
              <a href="/keywords?site=${site.id}" class="text-sm text-primary-600 hover:text-primary-800">
                Keywords
              </a>
              <a href="/articles?site=${site.id}" class="text-sm text-primary-600 hover:text-primary-800">
                Articles
              </a>
              <a href="/generate?site=${site.id}" class="text-sm text-primary-600 hover:text-primary-800">
                Generate
              </a>
            </div>
          </div>
        `).join('');
      } else {
        grid.innerHTML = `
          <div class="col-span-full bg-white rounded-lg shadow p-12 text-center">
            <svg class="w-12 h-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No sites yet</h3>
            <p class="text-gray-500 mb-4">Get started by creating your first site</p>
            <button onclick="document.getElementById('add-modal').classList.remove('hidden')" class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">
              Add Your First Site
            </button>
          </div>
        `;
      }
    } catch (error) {
      console.error('Failed to load sites:', error);
      grid.innerHTML = `<div class="col-span-full bg-red-50 rounded-lg shadow p-6 text-center text-red-700">Failed to load sites: ${error.message}</div>`;
    }
  }

  // Modal controls
  document.getElementById('add-site-btn').addEventListener('click', () => {
    document.getElementById('add-modal').classList.remove('hidden');
  });

  document.getElementById('close-modal').addEventListener('click', () => {
    document.getElementById('add-modal').classList.add('hidden');
  });

  // Add site
  document.getElementById('add-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    const apiKey = localStorage.getItem('admin_api_key');
    if (!apiKey) return;

    const id = document.getElementById('site-id').value.toLowerCase().replace(/\s+/g, '-');
    const name = document.getElementById('site-name').value;
    const niche = document.getElementById('site-niche').value;
    const domain = document.getElementById('site-domain').value || null;

    try {
      const response = await fetch(`${API_URL}/api/sites`, {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${apiKey}`,
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ id, name, niche, domain })
      });

      const data = await response.json();
      if (data.success) {
        document.getElementById('add-modal').classList.add('hidden');
        document.getElementById('add-form').reset();
        loadSites();
      } else {
        alert('Failed to create site: ' + (data.error || 'Unknown error'));
      }
    } catch (error) {
      alert('Failed to create site: ' + error.message);
    }
  });

  // Initialize
  function init() {
    if (localStorage.getItem('admin_api_key')) {
      loadSites();
    }
  }

  // Run init immediately and on DOMContentLoaded as backup
  init();
  document.addEventListener('DOMContentLoaded', init);

  // Listen for custom event from AdminLayout when API key is set
  window.addEventListener('apiKeySet', () => {
    setTimeout(init, 100);
  });
})();
</script>
