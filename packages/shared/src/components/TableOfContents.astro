---
interface TOCItem {
  depth: number;
  text: string;
  slug: string;
}

interface Props {
  headings: TOCItem[];
  title?: string;
}

const { headings, title = "Table of Contents" } = Astro.props;

// Filter to only h2 and h3 for cleaner TOC
const filteredHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <nav class="toc bg-gray-50 rounded-xl p-6 mb-8" aria-label="Table of contents">
    <h2 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">
      {title}
    </h2>
    <ul class="space-y-2">
      {filteredHeadings.map((heading) => (
        <li class={heading.depth === 3 ? "ml-4" : ""}>
          <a
            href={`#${heading.slug}`}
            class="text-sm text-gray-600 hover:text-primary-600 transition-colors block py-1"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc a {
    text-decoration: none;
  }

  .toc a:hover {
    text-decoration: underline;
  }
</style>
