---
interface Props {
  siteName: string;
  links?: { label: string; href: string }[];
  social?: { platform: string; href: string }[];
}

const { siteName, links = [], social = [] } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-50 border-t border-gray-100">
  <div class="container-wide py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/" class="font-bold text-xl text-primary-600">
          {siteName}
        </a>
        <p class="mt-3 text-sm text-gray-600 max-w-md">
          Expert insights and actionable advice to help you stay ahead in your field.
        </p>
      </div>

      <!-- Quick Links -->
      {links.length > 0 && (
        <div>
          <h3 class="font-semibold text-gray-900 mb-3">Quick Links</h3>
          <ul class="space-y-2">
            {links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-gray-600 hover:text-primary-600 transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}

      <!-- Social -->
      {social.length > 0 && (
        <div>
          <h3 class="font-semibold text-gray-900 mb-3">Connect</h3>
          <div class="flex gap-4">
            {social.map((item) => (
              <a
                href={item.href}
                class="text-gray-400 hover:text-primary-600 transition-colors"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={item.platform}
              >
                {item.platform === "twitter" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                  </svg>
                )}
                {item.platform === "linkedin" && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-500">
          &copy; {currentYear} {siteName}. All rights reserved.
        </p>
        <div class="flex gap-6 text-sm text-gray-500">
          <a href="/privacy" class="hover:text-primary-600 transition-colors">Privacy Policy</a>
          <a href="/terms" class="hover:text-primary-600 transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>
